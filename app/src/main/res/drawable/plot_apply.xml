<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="0dp" android:top="0dp">
                <shape>
                    <corners android:radius="6dp" />
                    <gradient android:angle="270" android:endColor="#F8D15A" android:startColor="#EFB94D" />
                </shape>
            </item>
            <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape>
                    <gradient android:angle="200" android:endColor="#FFFFFF" android:centerColor="#F7FEFF" android:startColor="#F7FEFF" />
                    <corners android:radius="3dp" />
                    <stroke android:width="0.5dp" android:color="#939292" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>